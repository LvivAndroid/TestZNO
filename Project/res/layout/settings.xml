<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grad"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:textSize="15px" >
            </TextView>

            <TextView
                android:id="@+id/timeMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Виберіть режим тестування"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/Space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="10px" >
            </TextView>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/TimeYtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text=" Режим на час"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/TimeNotv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text=" Вільний режим"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" >
                </RadioButton>
            </LinearLayout>

            <Button
                android:id="@+id/SettingsConf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Підтвердити" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>